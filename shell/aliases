# intended for macos zsh

cd() {
    builtin cd "$@" || return
    if [[ -d .venv ]]
    then
        deactivate &> /dev/null
        source .venv/bin/activate
    else
        deactivate &> /dev/null
        true
    fi
}

cprint() {
    # colors: https://jonasjacek.github.io/colors/
    # args are the color code followed by the text to print
    print -P '%F{${1}}${@:2}%f'
}

cprintn() {
    # same as cprint but no newline
    print -nP '%F{${1}}${@:2}%f'
}

is_macos() {
    if [[ "$(uname -s)" == "Darwin" ]]
    then
        return 0
    else
        return 1
    fi
}

mkvenv() {
    python3 -m venv .venv
    source .venv/bin/activate
}

reup() {
    brew update
    cprintn 32 '==> '; print 'Brew Formula Updates'
    brew outdated --formula
    cprintn 32 '==> '; print 'Brew Cask Updates'
    brew outdated --cask
}

alias grep='egrep --color'
alias ll='ls -FGhla'
alias ls='ls -FGh'
alias vi='vim'
