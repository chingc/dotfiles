# https://git-scm.com/

[alias]
    amend = commit --amend
    co = checkout
    del = branch --delete --force
    fixup = commit --fixup
    ls = log --graph --pretty='format:%C(auto)%h [%ci]%d %s (%an)'
    pick = cherry-pick

[core]
    autocrlf = false

[credential]
    helper = /usr/local/share/gcm-core/git-credential-manager-core

[credential "https://dev.azure.com"]
    useHttpPath = true

[pull]
    ff = only

[rebase]
    autosquash = true

[user]
    name = Ching Chow
    email = ching@getbento.com
