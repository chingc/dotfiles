# Location: ~/.gitconfig
# Help: https://git-scm.com/docs/git-config

[alias]
    amend = commit --amend
    del = branch --delete --force
    fixup = commit --fixup
    ls = log --graph --pretty='format:%C(auto)%h [%ci]%d %s (%an)'
    pick = cherry-pick

[core]
    autocrlf = false
    editor = nvim

[fetch]
    prune = true

[pull]
    ff = only

[push]
    autoSetupRemote = true

[rebase]
    autoSquash = true

[user]
    name = Ching C
    email = ching64@proton.me
