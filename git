# Config location: ~/.gitconfig
# Help: https://git-scm.com/docs/git-config

[alias]
    amend = commit --amend
    del = branch --delete --force
    fixup = commit --fixup
    ls = log --graph --pretty='format:%C(auto)%h [%ci]%d %s (%an)'
    pick = cherry-pick

[core]
    autocrlf = false
    editor = nvim

[pull]
    ff = only

[rebase]
    autosquash = true

[user]
    name = Ching Chow
    email = ching64@proton.me
